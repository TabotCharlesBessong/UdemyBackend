
extends layouts/main-layout.pug 
 
block styles 
  link(rel="stylesheet", href="/css/product.css")
  link(rel="stylesheet", href="/css/forms.css")
  link(rel="stylesheet", href="/css/main.css")

block content 
  main
      if prods.length > 0 
        .grid
          each products in prods 
            article.card.product-item
              header.card__header
                h1.product__title #{products.title}
                
                .card__image
                  img(src="#{products.img}", alt="A   Book")
                
                .card__content
                  h2.product__price $#{products.price}
                    p.product__description #{products.desc}
                
                .card__actions
                    button.btn Add to Cart

      else 
        h1 No products

