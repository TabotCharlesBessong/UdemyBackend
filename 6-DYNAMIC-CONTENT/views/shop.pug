
doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title #{docTitle}
    link(rel="stylesheet", href="/css/main.css")
    link(rel="stylesheet", href="/css/product.css")
  body 
    header.main-header 
      nav.main-header__nav 
        ul.main-header__item-list 
          li.main-header__item 
            a.active(href="/") Shop 
          li.main-header__item 
            a(href="/admin/add-product") Add Product  
    
    main
      if prods.length > 0 
        .grid
          each products in prods 
            article.card.product-item
              header.card__header
                h1.product__title #{products.title}
                
                .card__image
                  img(src="#{products.img}", alt="A   Book")
                
                .card__content
                  h2.product__price $#{products.price}
                    p.product__description #{products.desc}
                
                .card__actions
                    button.btn Add to Cart

      else 
        h1 No products  